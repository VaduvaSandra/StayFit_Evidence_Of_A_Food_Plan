<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Sectiunea pentru selectarea datei si orei -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Iconita pentru data si ora -->
        <ImageView
            android:id="@+id/datetime_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_baseline_calendar_today_24" />

        <!-- Textul pentru data si ora selectata -->
        <TextView
            android:id="@+id/datetime_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/datetime_icon"
            android:text="Select Date and Time"
            android:textSize="16sp"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <!-- RecyclerView pentru afisarea listei de elemente -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>