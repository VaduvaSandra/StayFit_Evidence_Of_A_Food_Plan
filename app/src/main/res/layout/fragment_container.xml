<?xml version="1.0" encoding="utf-8"?>
<!--
    Acest fișier XML definește un layout cu un element RelativeLayout care conține
    un container pentru fragmente (FrameLayout). Atributele XML și structura sunt
    comentate pentru a oferi claritate cu privire la rolul fiecărui element în design.
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Containerul pentru fragmente -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>