<?xml version="1.0" encoding="utf-8"?>
<!--
    Acest fișier XML definește aspectul și structura vizuală a unei pagini care afișează gustări în cadrul unei aplicații Android.
    Layout-ul principal este un ConstraintLayout care conține un LinearLayout pentru organizarea verticală a elementelor.
-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SnacksActivity">
    <!-- LinearLayout pentru organizarea elementelor într-un mod vertical -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- RelativeLayout pentru organizarea elementelor cu padding -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <!-- ImageView pentru iconul de calendar -->
            <ImageView
                android:id="@+id/datetime_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_baseline_calendar_today_24" />
            <!-- TextView pentru afișarea textului "Select Date and Time" -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/datetime_icon"
                android:text="Select Date and Time"
                android:textSize="16sp"
                android:layout_centerVertical="true" />

        </RelativeLayout>
        <!-- RecyclerView pentru afișarea listei de gustări -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>