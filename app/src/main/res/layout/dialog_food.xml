<?xml version="1.0" encoding="utf-8"?>
<!--
    Acest fișier XML definește aspectul și structura vizuală a unei interfețe care conține un SearchView și două butoane.
    Se utilizează un LinearLayout pentru organizarea verticală a elementelor.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- SearchView pentru căutarea într-un set de date -->
    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="false" />
    <!-- LinearLayout pentru organizarea orizontală a două butoane -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <!-- Buton pentru adăugarea unui element -->
        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adaugă" />
        <!-- Buton pentru anularea acțiunii curente -->
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Renunță" />

    </LinearLayout>

</LinearLayout>